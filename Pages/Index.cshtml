@page
@model IndexModel

<div class="IndexBtnWrapper">
    <form  method="POST" asp-page-handler="Trending">
        <input class="indexBtn" type="submit" value="Trending">
    </form>
    <form method="POST" asp-page-handler="NowPlaying">
        <input class="indexBtn" type="submit" value="Now Playing">
    </form>
    <form method="POST" asp-page-handler="TopRated">
        <input class="indexBtn" type="submit" value="Top Rated">
    </form>
    <form ethod="POST" asp-page-handler="UpComing">
        <input class="indexBtn" type="submit" value="Upcoming">
    </form>
    <form method="POST" asp-page-handler="Lastest">
        <input class="indexBtn" type="submit" value="Lastest" disabled>
    </form>
</div>


    <div class="card_wrapper">
@for(int i = 0; i < Model.movieTitles.Count; i++) {
    <div class="card" name="">
        <form method="POST" asp-page-handler="Details">
            <input class="movieCard" type="submit" name="movieID" value="@Model.movieIDs[i]">
            <img class="card_img" src=@Model.posterURLs[i]  />
            <div class="card_details">
                <h3 class="card_title">@Model.movieTitles[i]</h3>
                <p class="card_overview">@Model.overview[i]</p>
            </div>
        </form>
    </div>
}
    </div>


